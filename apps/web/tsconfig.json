{
  "extends": "@iconzy/tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "types": ["node"],
    "paths": {
      "@components/*": ["components/*"],
      "@contexts/*": ["contexts/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@typedefs/*": ["typedefs/*"],
      "@config/*": ["config/*"],
      "@state/*": ["state/*"],
      "@public/*": ["..public/*"],
      "@typings/*": ["typings/*"],
      "@modules/*": ["modules/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  }
}
